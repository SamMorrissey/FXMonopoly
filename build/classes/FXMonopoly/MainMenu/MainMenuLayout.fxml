<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="anchor-pane" prefHeight="300.0" prefWidth="205.0" stylesheets="@MainMenuStyle.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMonopoly.MainMenu.MainMenuController">
    <children>
      <VBox alignment="CENTER" layoutX="54.0" layoutY="120.0" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
         <children>
            <Button fx:id="singlePlayerButton" text="Single Player" VBox.vgrow="NEVER" />
            <Button fx:id="aboutButton" mnemonicParsing="false" text="About" />
            <Button fx:id="exitButton" mnemonicParsing="false" text="Exit" />
         </children>
      </VBox>
      <ImageView fx:id="banner" fitHeight="150.0" fitWidth="204.0" layoutX="5.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/Images/MonopolyBanner.png" />
         </image>
      </ImageView>
    </children>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</AnchorPane>
